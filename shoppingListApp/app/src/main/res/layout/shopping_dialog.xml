<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etShoppingItemName"
        android:hint="Enter item name here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etShoppingItemPrice"
        android:inputType="number"
        android:hint="Enter item price here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinnerCategories"
        android:hint="Select item category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etShoppingItemDescription"
        android:hint="Enter item description here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/cbShoppingItemBought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchased"/>

</LinearLayout>